<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:li="using:LoadingIndicators.Avalonia"
             xmlns:vm="using:kursadarbs_reactiveUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="kursadarbs_reactiveUI.Views.DeepBreathingView"
             x:DataType="vm:DeepBreathingViewModel"
             x:Name="DeepBreath"
             Loaded="DeepBreath_Loaded"
             Unloaded="DeepBreath_Unloaded">
   <Design.DataContext>
	 <vm:DeepBreathingViewModel/>
 </Design.DataContext>
    <StackPanel VerticalAlignment="Center" Spacing="5" MaxWidth="350">
        <TextBlock VerticalAlignment="Center"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Text="{Binding BreatheText}"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="Black"/>
        
        <li:LoadingIndicator Mode="Arc" SpeedRatio="0.4" />
        
    </StackPanel>
</UserControl>
